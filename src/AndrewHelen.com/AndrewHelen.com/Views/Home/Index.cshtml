@inject IOptions<ReCaptchaClass> RecaptchaOptions
@{

    ViewData["Title"] = "Home Page";
}

@section metatags{
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Wedding | Andrew & Helen" />
    <meta property="og:description" content="Come and help us make our most important day unforgettable, find more details about us and our happy occasion here." />
    <meta property="og:url" content="@($"https://{Context.Request.Host}{Url.RouteUrl("HomeIndex")}")" />
