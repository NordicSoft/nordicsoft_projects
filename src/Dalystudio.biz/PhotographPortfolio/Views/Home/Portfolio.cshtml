        <div class="container">

            <!-- PORTFOLIO FILTER -->
            <div class="row">
                <div class="col-sm-12">

                    <ul id="filters" class="filter font-inc">
                        <li><a href="#" data-filter="*" class="current wow fadeInUp">All</a></li>
                        <li><a href="#" data-filter=".wedding" class="wow fadeInUp" data-wow-delay="0.2s">Wedding</a></li>
                        <li><a href="#" data-filter=".lovestory" class="wow fadeInUp" data-wow-delay="0.4s">Love Story</a></li>
