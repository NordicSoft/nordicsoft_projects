@{
    ViewData["Title"] = "Portfolio|Daly Studio";
    ViewData["Description"] = "See some examples of my works & featured weddings at Daly Studio. Our wedding photos tell beautiful stories of couples ...";
}
@section metatags
    {
    <meta name="description" content="We know answers to all your queries. Find the info you require or get in touch with us if you haven't found what you were looking for." />

}
@section links
    {
    <link rel="canonical" href="@($"{Context.Request.Scheme}://{Context.Request.Host}{Url.RouteUrl("Portfolio")}")" />
}
<div class="wrapper">

    <!-- HOME -->
    <section class="module module-header bg-dark bg-dark-50" data-background="../img/Homepage.jpg">

        <div class="container">

            <!-- MODULE TITLE -->
            <div class="row">

                <div class="col-sm-6 col-sm-offset-3">

                    <h1 class="module-title font-alt align-center">PORTFOLIO</h1>

                    <div class="module-subtitle font-inc align-center">
                        Photography is a way of feeling, of touching, of loving. I think my works can speak for me.
                    </div>

                </div>

            </div>
            <!-- /MODULE TITLE -->

        </div>

    </section>
    <!-- /HOME -->
